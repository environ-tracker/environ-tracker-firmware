/dts-v1/;
#include <nordic/nrf52833_qiaa.dtsi>
#include "environ_tracker2-pinctrl.dtsi"

/ {
    model = "Thesis Environment Tracker v2";
    compatible = "nordic,environ_tracker2";

    chosen {
        zephyr,console = &uart0;
        zephyr,shell-uart = &uart0;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,code-partition = &flash0;
    };

    /* Aliases provided for compatibility with samples */
    aliases {
        lora0 = &lora;
    };

    connections {
        bat_chrg: bat_chrg_0 {
            gpios = <&gpio0 1 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "battery-charge-input";
        };
    };

    environ_tracker_header: connector {
        compatible = "environ-tracker-header";
        #gpio-cells = <2>;
        gpio-map-mask = <0xffffffff 0xffffffc0>;
        gpio-map-pass-thru = <0 0x3f>;
        gpio-map =  <0 0 &gpio0 2 0>,
                    <1 0 &gpio0 8 0>;
    };

    mother_vdd_pwr: mvdd-pwr-ctrl {
        compatible = "regulator-fixed";
        label = "mother-vdd-pwr-ctrl";
        regulator-name = "mother-vdd-pwr-ctrl";
        enable-gpios = <&gpio0 19 GPIO_ACTIVE_HIGH>;
        regulator-boot-on;
    };

    fstab {
        compatible = "zephyr,fstab";
        lfs: lfs {
            compatible = "zephyr,fstab,littlefs";
            mount-point = "/lfs";
            partition = <&storage_partition>;
            automount;
            read-size = <16>;
            prog-size = <16>;
            cache-size = <64>;
            lookahead-size = <32>;
            block-cycles = <512>;
            // no-format;
        };
    };
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&uart0 {
    compatible = "nordic,nrf-uarte";
    status = "okay";
    current-speed = <115200>;
    pinctrl-0 = <&uart0_default>;
    pinctrl-1 = <&uart0_sleep>;
    pinctrl-names = "default", "sleep";
};

/* uart for zoe-m8q */
&uart1 {
    compatible = "nordic,nrf-uarte";
    status = "okay";
    current-speed = <9600>;
    pinctrl-0 = <&uart1_default>;
    pinctrl-1 = <&uart1_sleep>;
    pinctrl-names = "default", "sleep";

//     // zoem8q: zoem8q@0 { /* TODO: port this */
//     //     reg = <0>;
//     //     label = "ZOE-M8Q";
//     //     vin-supply = <&mother_vdd_pwr>;
//     //     tx-ready-gpios = <&gpio0 10 GPIO_ACTIVE_LOW>;
//     //     reset-gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
//     // }
};

shieldi2c: &i2c0 {
    compatible = "nordic,nrf-twim";
    status = "okay";
    clock-frequency = <I2C_BITRATE_FAST>;
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
    lc709204f: lc709204f@b {
        compatible = "onnn,lc709204f";
        reg = <0x0b>;
        label = "FUEL_GAUGE";
        design-capacity = <400>;
        design-voltage = <3700>;
        desired-voltage = <4200>;
        empty-voltage = <3200>;
        desired-charging-current = <1000>;
        chg-term-current = <1000>;
        apa-value = <0x1e1e>;
        battery-type = <0>;
        nint-gpios = <&gpio0 8 GPIO_ACTIVE_LOW>;
    };

    // TODO: provide support for RTC
    // rv3028c7: rv3028c7@52 {
    //     compatible = "";
    //     reg = <52>;
    //     label = "EXT_RTC";
    //     irq-gpios = <&gpio1 5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
    // };
};

/* LORA spi */
&spi1 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    pinctrl-0 = <&spi1_default>;
    pinctrl-1 = <&spi1_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios = <&gpio0 29 GPIO_ACTIVE_LOW>;
    lora: sx1262@0 {
        compatible = "semtech,sx1262";
        reg = <0>;
        label = "SX1262";
        vin-supply = <&mother_vdd_pwr>;
        reset-gpios = <&gpio0 31 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
        busy-gpios = <&gpio1 4 GPIO_ACTIVE_LOW>;
        dio1-gpios = <&gpio1 6 GPIO_ACTIVE_HIGH>;
        spi-max-frequency = <1000000>;
    };
};

/* external flash SPI */
&spi2 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    pinctrl-0 = <&spi2_default>;
    pinctrl-1 = <&spi2_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios = <&gpio0 25 GPIO_ACTIVE_LOW>;
    mx25v8035f: mx25v8035f@0 {
        compatible = "jedec,spi-nor";
        reg = <0>;
        label = "MX258035F";
        vin-supply = <&mother_vdd_pwr>;
        spi-max-frequency = <1000000>;
        jedec-id = [c2 23 14];
        size = <8388608>;
        has-dpd;
        t-enter-dpd = <30000>;
        t-exit-dpd = <35000>;

        partitions {
            compatible = "fixed-partitions";
            #address-cells = <1>;
            #size-cells = <1>;    
            storage_partition: partition@0 {
                label = "storage";
                reg = <0x00000000 0x00100000>;
            };
        };
    };
};

&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        /*
            * The flash starting at 0x0007a000 and ending at
            * 0x0007ffff (sectors 122-127) is reserved for use
            * by the application.
            * Storage partition will be used by FCB/LittleFS/NVS
            * if enabled.
            */
        settings_partition: partition@7a000 {
            label = "settings";
            reg = <0x0007a000 0x00006000>;
        };
    };
};

