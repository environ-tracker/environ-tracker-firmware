# Enable soc and board
CONFIG_SOC_SERIES_NRF52X=y
CONFIG_SOC_NRF52833_QIAA=y
CONFIG_BOARD_ENVIRON_TRACKER2=y

# Setup internal 32kHz RC clock to 250ppm accuracy
CONFIG_CLOCK_CONTROL_NRF_K32SRC_RC=y
CONFIG_CLOCK_CONTROL_NRF_K32SRC_250PPM=y

# Enable regulators
CONFIG_REGULATOR=y

# Enable MPU
CONFIG_ARM_MPU=y

# Enable GPIO
CONFIG_GPIO=y

# Enable UART driver
CONFIG_SERIAL=y

# Enable UART console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable pin control
CONFIG_PINCTRL=y